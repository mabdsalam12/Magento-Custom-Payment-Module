<config>
	<modules>
		<Abdus_Bpayment>
			<version>1.0.0</version>
		</Abdus_Bpayment>
	</modules>
	<global>
		<fieldsets>
			<sales_convert_quote_payment>
				<custom_field_one><to_order_payment>*</to_order_payment></custom_field_one>
				<custom_field_two><to_order_payment>*</to_order_payment></custom_field_two>
			</sales_convert_quote_payment>
		</fieldsets>
		<helpers>
			<bpayment>
				<class>Abdus_Bpayment_Helper</class>
			</bpayment>
		</helpers>
		<blocks>
			<bpayment>
				<class>Abdus_Bpayment_Block</class>
			</bpayment>
		</blocks>
		<models>
			<bpayment>
				<class>Abdus_Bpayment_Model</class>
			</bpayment>
		</models>
		<resources>
			<bpayment_setup>
				<setup>
					<module>Abdus_Bpayment</module>
				</setup>
			</bpayment_setup>
		</resources>
	</global>
	<default>
		<payment>
			<bpayment>
				<active>1</active>
				<model>bpayment/paymentmethod</model>
				<order_status>pending</order_status>
				<title>Bpayment</title>
				<allowspecific>0</allowspecific>
				<payment_action>sale</payment_action>
			</bpayment>
		</payment>
		<frontend>
			<routers>
				<bpayment>
					<use>standard</use>
					<args>
						<modules>Abdus_Bpayment</modules>
						<frontName>bpayment</frontName>
					</args>
				</bpayment>
			</routers>
		</frontend>
	</default>
</config>